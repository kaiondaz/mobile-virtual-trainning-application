<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Create_Workoust"
    android:background="@drawable/white">


    <EditText
        android:id="@+id/textView7"
        android:layout_width="171dp"
        android:layout_height="40dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit_round"
        android:hint="Workout name "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <EditText
        android:id="@+id/textView6"
        android:layout_width="124dp"
        android:layout_height="40dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/edit_round"
        android:hint="Date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7">

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="197dp"
            android:visibility="visible">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/exercisename"
                    android:layout_width="118dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/edit_round"
                    android:backgroundTint="#000000"
                    android:text="Exercise name "
                    android:textColor="#FFFFFF"
                    />

                <TextView
                    android:id="@+id/Repetitions"
                    android:layout_width="118dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/edit_round"
                    android:backgroundTint="#000000"
                    android:text="Repetitions"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/Sets"
                    android:layout_width="118dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/edit_round"
                    android:backgroundTint="#000000"
                    android:text="Sets"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:layout_width="22dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/edit_round"
                    android:backgroundTint="#000000"
                    android:text="Add pic"
                    android:textColor="#FFFFFF" />


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/textView24"
                    android:layout_width="118dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/edit_round" />

                <EditText
                    android:id="@+id/txVtiew"
                    android:layout_width="118dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/edit_round" />

                <EditText
                    android:id="@+id/textView23"
                    android:layout_width="118dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/edit_round" />

                <ImageView
                    android:id="@+id/imageView22"
                    android:layout_width="57dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/add_pic" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible"
                tools:visibility="visible">

                <EditText
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/edit_round" />

                <EditText
                    android:id="@+id/textView4"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/edit_round" />

                <EditText
                    android:id="@+id/textView3"
                    android:layout_width="118dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/edit_round" />

                <ImageView
                    android:id="@+id/imageView15"
                    android:layout_width="22dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/add_pic" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/textView15"
                    android:layout_width="118dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/edit_round" />

                <EditText
                    android:id="@+id/textView14"
                    android:layout_width="118dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/edit_round" />

                <EditText
                    android:id="@+id/textView13"
                    android:layout_width="65dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/edit_round" />

                <ImageView
                    android:id="@+id/imageView19"
                    android:layout_width="57dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/add_pic" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/textView18"
                    android:layout_width="118dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/edit_round" />

                <EditText
                    android:id="@+id/textView17"
                    android:layout_width="118dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/edit_round" />

                <EditText
                    android:id="@+id/textView16"
                    android:layout_width="118dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/edit_round" />

                <ImageView
                    android:id="@+id/imageView20"
                    android:layout_width="57dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/add_pic" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/textView21"
                    android:layout_width="118dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/edit_round" />

                <EditText
                    android:id="@+id/textView20"
                    android:layout_width="118dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/edit_round" />

                <EditText
                    android:id="@+id/textView19"
                    android:layout_width="118dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/edit_round" />

                <ImageView
                    android:id="@+id/imageView21"
                    android:layout_width="57dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/add_pic" />
            </TableRow>
        </TableLayout>

    </LinearLayout>

    <Button
        android:id="@+id/button17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:background="@drawable/fui_idp_button_background_twitter"
        android:text="Create"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.0" />

    <com.blogspot.atifsoftwares.circularimageview.CircularImageView
        android:layout_width="126dp"
        android:layout_height="122dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/workouttutorialspic">

    </com.blogspot.atifsoftwares.circularimageview.CircularImageView>


</androidx.constraintlayout.widget.ConstraintLayout>