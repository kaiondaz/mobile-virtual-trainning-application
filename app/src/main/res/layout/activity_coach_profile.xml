<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/clientprofiledesign"
    tools:context=".CoachProfile">

    <com.blogspot.atifsoftwares.circularimageview.CircularImageView
        android:id="@+id/AvatarUserProfile"
        android:layout_width="166dp"
        android:layout_height="179dp"
        android:layout_marginStart="120dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="76dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_menu_camera" />

    <TextView
        android:id="@+id/nutritionistNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Coach name"
        android:textSize="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AvatarUserProfile" />

    <TextView
        android:id="@+id/CoachEmailTv"
        android:layout_width="194dp"
        android:layout_height="29dp"
        android:layout_marginTop="28dp"
        android:text="Coach email"
        android:textColor="@color/fui_bgAnonymous"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.608"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nutritionistNameTv" />

    <Button
        android:id="@+id/viewWorkouts"
        android:layout_width="135dp"
        android:layout_height="52dp"
        android:layout_marginTop="36dp"
        android:background="@color/design_default_color_secondary"
        android:text="View Reviews"
        android:textColor="?attr/colorBackgroundFloating"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CoachEmailTv" />

    <Button
        android:id="@+id/addReviewBtn"
        android:layout_width="135dp"
        android:layout_height="52dp"
        android:layout_marginTop="32dp"
        android:background="@android:color/background_light"
        android:text="Add review"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewWorkouts" />

</androidx.constraintlayout.widget.ConstraintLayout>