<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white"
    tools:context=".Shopping_Cart.Product_Details">

    <ImageView
        android:id="@+id/Product_image_details"
        android:layout_width="match_parent"
        android:layout_height="455dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/ic_menu_gallery" />

    <TextView
        android:id="@+id/Product_name_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Product_image_details"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="Product name"
        android:textColor="@color/fui_bgTwitter"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Product_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Product_name_details"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="Product description"
        android:textColor="@color/fui_bgTwitter"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Product_price_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Product_description"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="Product price"
        android:textColor="@color/fui_bgTwitter"
        android:textSize="16sp"
        android:textStyle="bold" />

    <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
        android:id="@+id/number_btn"
        android:layout_width="173dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Product_price_details"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:elevation="6dp"
        app:backGroundColor="@color/fui_bgTwitter"
        app:finalNumber="100"
        app:initialNumber="1"
        app:textSize="16dp"></com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_product_to_cart_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="30dp"
        android:background="@drawable/white"
        android:elevation="6dp"
        android:src="@drawable/ic_nutritionist_users"
        app:backgroundTint="@android:color/white" />


</RelativeLayout>