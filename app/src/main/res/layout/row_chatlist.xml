<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:contentPadding="3dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--ImageView: User profile Image -->
        <com.blogspot.atifsoftwares.circularimageview.CircularImageView
            android:id="@+id/profileIv"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_default"/>


        <!--ImageView:Online/Offline status -->
        <ImageView
            android:id="@+id/onlineStatusIv"
            android:layout_width="25dp"
            android:layout_height="25dp"/>


        <!--TextView: UserName -->
        <TextView
            android:id="@+id/nameTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:maxLines="2"
            android:layout_marginLeft="3dp"
            android:layout_toEndOf="@+id/profileIv"
            android:layout_toRightOf="@id/profileIv"
            android:text="His name"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="18sp" />

        <!--TextView: Last Message (by sener/receiver) -->

        <TextView
            android:id="@+id/lastMessageTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/nameTv"
            android:layout_toEndOf="@+id/profileIv"
            android:layout_toRightOf="@id/profileIv"
            android:text="The last message"
            android:textColor="@color/common_google_signin_btn_text_dark_focused" />




    </RelativeLayout>

    <!--Layout for chatlist to display in recycler  -->

</androidx.cardview.widget.CardView>