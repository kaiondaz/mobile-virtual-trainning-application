<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white"
    tools:context=".Models.Client">

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="83dp"
        android:layout_height="39dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.954"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/vtrainerlogo" />

    <ImageView
        android:id="@+id/AddressTv"
        android:layout_width="184dp"
        android:layout_height="120dp"
        android:layout_marginTop="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/profile_pic_example" />

    <Button
        android:id="@+id/myNutrition"
        android:layout_width="159dp"
        android:layout_height="36dp"
        android:layout_marginTop="104dp"
        android:background="@drawable/white"
        android:text="My nutrition "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myWorkouts" />

    <Button
        android:id="@+id/myCoach"
        android:layout_width="156dp"
        android:layout_height="46dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/white"
        android:text="My subscription "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myWorkouts" />

    <Button
        android:id="@+id/myDetails"
        android:layout_width="160dp"
        android:layout_height="39dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/white"
        android:text="My details "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myNutrition" />

    <Button
        android:id="@+id/myWorkouts"
        android:layout_width="162dp"
        android:layout_height="39dp"
        android:layout_marginTop="32dp"
        android:background="@android:color/black"
        android:text="My workouts"
        android:textColor="@android:color/background_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AddressTv" />

</androidx.constraintlayout.widget.ConstraintLayout>